<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="portfwd.Controller">
    <children>
        <BorderPane>
            <top>
                <VBox BorderPane.alignment="CENTER">
                    <children>
                        <MenuBar>
                            <menus>
                                <Menu mnemonicParsing="false" text="File">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Close" />
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Edit">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Delete" />
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Help">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="About" />
                                    </items>
                                </Menu>
                            </menus>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </MenuBar>
                        <HBox>
                            <children>
                                <TextField fx:id="srcPort" layoutX="10.0" layoutY="10.0" promptText="Source Port" />
                                <Button mnemonicParsing="false" onAction="#routeButtonClicked" text="Route" />
                                <TextField fx:id="destIP" layoutX="159.0" layoutY="10.0" promptText="Destination IP" />
                                <TextField fx:id="destPort" promptText="Destination Port" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </top>
            <bottom>
                <HBox alignment="CENTER" BorderPane.alignment="CENTER" />
            </bottom>
            <right>
                <TextFlow BorderPane.alignment="CENTER" />
            </right>
            <center>
                <TableView fx:id="PairTable" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="235.0" prefWidth="358.0" BorderPane.alignment="BOTTOM_RIGHT" />
            </center>
            <left>
                <TextArea fx:id="appConsole" prefHeight="235.0" prefWidth="298.0" style="-fx-background-color: #000000;" stylesheets="@../css/myStyle.css" text="Welcome to the Port Forwarder!" BorderPane.alignment="CENTER" />
            </left></BorderPane>
    </children>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
</GridPane>